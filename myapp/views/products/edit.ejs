<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/stylesheets/services.css">
        <%- include('../partials/heads'); %>
    </head>
<body>

<header>
    <%- include('../partials/navbar'); %>
</header>
<main>
    <div class="container mt-5"> 
    <div class="row">
        <div class="col-12">
            <h2> Edit Product</h2>
        </div>
    </div>
        <form action="/products/edit/<%= product._id %>" method="post">
            <div class="form-group">
                <label for="name">Product Name</label>
                <input id="name" class="form-control" type="text" name="name" value="<%= product.name %>">
            </div>
            <div class="form-group">
                <label for="price">Product Price</label>
                <input id="price" class="form-control" type="text" name="price" value="<%= product.price %>">
            </div>
            <div class="form-group">
                <label for="ManufacturingDate">Manufacturing Date</label>
                <input id="ManufacturingDate" class="form-control" type="text" name="ManufacturingDate" value="<%= product.ManufacturingDate%>">
            </div>
            <input type="submit" class="btn btn-info">
        </form>
    </div>    
</main>
<%- include('../partials/footer')%>
</body>
</html>

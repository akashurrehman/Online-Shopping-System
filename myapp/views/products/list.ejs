<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/heads'); %>
</head>
<body>
    <%-include('../partials/navbar'); %>
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-6">
                <h2>All Products</h2>
            </div>
            <div class="col-6">
                <a href="/products/add" class="btn btn-success float-right">Add New Product</a>
            </div>
        </div>
    
                
        <div class="row pt-5">
        <% products.forEach(function(product) { %>
            <div class="col-lg-4 col-12">
                <div class="card">
                    <img src="/images/back-1.webp" alt="Product Image" style="width: 100%;">
                    <div class="card-body">    
                        <h5 class="card-title">Product Name: <%= product.name %></h5>
                            <p class="card-text">Product Price:  <%= product.price %></p>
                            <p class="card-text">Product Manufacturing Date: <%= product.ManufacturingDate %></p>
                                <div class="text-warning">
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                </div>
                                <a href="/products/delete/<%= product._id %>" class="btn btn-warning pull-right">Delete</a>
                                <a href="/products/edit/<%= product._id %>" class="btn btn-info pull-right">Edit</a>
                                <a href="/products/cart/<%= product._id %>" class="btn btn-primary pull-right">Add to Cart</a>
                    </div>
                </div>
            </div>
        <% }); %>
        </div>
    </div>

    <%-include('../partials/footer'); %>
</body>
</html>
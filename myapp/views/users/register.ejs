<!doctype html>
<html lang="en">
<head>
    <%- include('../partials/heads'); %>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="bg-light pb-5 p-5 border border-rounded-0 mt-5" id="centered">
        <div class="col-12">
            <ul class="list-unstyled">
                <li class="d-inline-flex">
                    <a href="/login" target="_self">Login</a>
                </li>
                <li class="d-inline-flex px-5">
                    <a href="/register">Sign Up</a>
                </li>
            </ul>
        </div>
        <form action="/register" method="post">
            <input type="text" name="fullname" id="name" class="form-control mb-3" required="required" title="Name" placeholder="Full Name">
            <input type="phone" name="phoneNo" id="phoneNo" class="form-control mb-3" required="required" title="Name" placeholder="Phone No">
            <input type="email" name="username" id="email" class="form-control mb-3" required="required" title="email" placeholder="Email">
            <input type="password" name="password" id="password" class="form-control mb-3" required="required" title="password" placeholder="Password">
            
            <h6 class="h6">Already a Member?
                <a href="/login" targt="_self"> <span class="btn btn-primary text-center">Signin</span> </a>
            </h6>
            <button type="submit" class="btn btn-primary btn-block mt-5">SignUp</button>
        </form>
    </div>
</body>
</html>